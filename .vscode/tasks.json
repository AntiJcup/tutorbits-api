{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "TracerProtoCompile",
            "command": "tools/protoc.exe",
            "type": "process",
            "args": [
                "--proto_path=${workspaceFolder}/Tracer/proto",
                "--csharp_opt=file_extension=.g.cs",
                "--csharp_out=${workspaceFolder}/Tracer/models",
                "Tracer.proto",
            ]
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/tutorbits-api.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/tutorbits-api.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/tutorbits-api.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}